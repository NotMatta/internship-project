generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Permission {
  READ_APPS
  WRITE_APPS
  READ_USERS
  WRITE_USERS
  READ_ROLES
  WRITE_ROLES
  READ_LOGS
  WRITE_LOGS
  MASTER
}

model Role {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  permissions Permission[]
  users User[]
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  roleId String @map("_roleId") @db.ObjectId
  role Role @relation(fields: [roleId], references: [id])
  applications Application[]
  logs Log[]
}

enum adressType {
  URL
  IP
}

model Application {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  logo String  
  type adressType
  address String
  login String
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  userId String @map("_userId") @db.ObjectId
  user  User   @relation(fields: [userId], references: [id])
}

enum ActionType {
  LOGIN
  LOGOUT
  CREATE
  UPDATE
  DELETE
}

model Log {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  message String
  action ActionType
  date DateTime
  userId String @map("_userId") @db.ObjectId
  user  User   @relation(fields: [userId], references: [id])
}
